  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the form to add new itens to Menu.</span>
        </div>

        <!-- add Item form -->
         <!-- form handling -->
 <form method="POST" id="update_item">
    <div class="new_item">
        <div class="form-group">
            <label for="name" class="text-light">Item</label>
            <input type="hidden" name="id" value="<%= menu._id %>">
            <input type="text" name="name" value="<%= menu.item %>" placeholder="Croissant">
        </div>
        <div class="form-group">
            <label for="Price" class="text-light">Price</label>
            <input type="text" name="price" value="<%= menu.price%>" placeholder="2.50">
        </div>
        <div class="form-group">
            <label for="vegan" class="text-light">Vegan</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="vegan" value="Yes" <%= menu.vegan == 'Yes' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="vegan" value="No"  <%= menu.vegan == 'No' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">No</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
